{
	"name": "@vibecodeapp/sdk",
	"version": "0.4.11",
	"description": "SDK for Vibecodeapp.com - Web polyfills and Metro configuration for React Native",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./metro": {
			"default": "./metro/index.cjs"
		}
	},
	"files": [
		"dist",
		"metro"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vibecode/vibecode-sdk.git"
	},
	"homepage": "https://github.com/vibecode/vibecode-sdk#readme",
	"bugs": {
		"url": "https://github.com/vibecode/vibecode-sdk/issues"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@blazejkustra/react-native-alert": "^1.0.0",
		"@stardazed/streams-text-encoding": "^1.0.2",
		"@teovilla/react-native-web-maps": "^0.9.5",
		"assert": "^2.1.0",
		"cosmiconfig": "^8.3.6",
		"html-to-image": "^1.11.11",
		"html2canvas": "^1.4.1",
		"p-limit": "^3.1.0",
		"react-native-svg-transformer": "^1.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.4",
		"@types/html2canvas": "^1.0.0",
		"@types/react": "19.1.11",
		"react": "19.1.0",
		"react-native": "0.81.4",
		"react-native-web": "^0.21.2",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"react-native-web": "*",
		"react-native-safe-area-context": "*",
		"expo-status-bar": "*"
	},
	"peerDependenciesMeta": {
		"react-native-web": {
			"optional": true
		},
		"react-native-svg-transformer": {
			"optional": true
		}
	},
	"type": "module"
}
